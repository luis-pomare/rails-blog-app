<%= render partial: '_partials/user', locals: { user: @user }%>

<% @posts.each do |post| %>
  <%= render partial: '_partials/post_preview', locals: { user: @user, post:post }%>
  <% post.last_comments.each do |comment| %>
    
    <p><strong><%= comment.author.name %></strong>: <%= comment.text %></p>
  <% end %>
<% end %>
