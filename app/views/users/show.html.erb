<%= render partial: '_partials/user', locals: { user: @user }%>

<section class = "user_show_bio">
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</section>

<div id="user_show_last_posts">
  <% @last_posts.each do |post| %>
    <div class='user_show_last_post_container'>
      <h2 class = 'user_show_last_post_title'><%=  post.title %></h2>
      <p class = "user_show_last_post_text"><%= post.text.slice(0..50) %>...</p>
      <p class = "user_show_last_post_counters">
        comments: <%= post.comments_counter%> likes: <%= post.likes_counter %>
      </p>
      <%= link_to "Show this post", user_post_path(@user) %>
    </div>
  <% end %>
</div>

<div class="user_show_bottom_links">
  <%= link_to "Back to users", users_path %>
  <%= link_to "See all posts", user_posts_path(@user) %>
</div>
